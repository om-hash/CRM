<div class="control-section12342" style="margin-top:10px">

    <ejs-grid id="RealEstateGridView2" dataSource="Model" gridLines="Horizontal"  height="auto" width="auto" allowFiltering="true"  toolbar="@(new List<string>() {"Search","ColumnChooser" })">
        <e-grid-pagesettings pageSizes="new []{ 5,10,20,50,100}" pageSize="5"></e-grid-pagesettings>
        <e-grid-filtersettings showFilterBarStatus="true" showFilterBarOperator="true" type="Excel"></e-grid-filtersettings>
