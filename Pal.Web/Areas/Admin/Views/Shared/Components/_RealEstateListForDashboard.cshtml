            <e-grid-column field="SoldQuantity" disableHtmlEncode="false" template="#SoldQuantity" width="150" type="text"  headerText="@T("model.RealEstate.SoldQuantity")" textAlign="Justify"></e-grid-column>
        </e-grid-columns>
    </ejs-grid>

</div>

<script id="SoldQuantity" type="text/x-template">
    <div style="display:flex">
        <div>
            <button onclick="decreaseSoldQuntity(value)" value="${Id}" class="btn btn-danger">-</button>
        </div>
        <div style="padding:5px 25px 5px 25px; ">
            <span id="quan-${Id}">${SoldQuantity}</span>
        </div>
        <div>
            <button onclick="increaseSoldQuntity(value)" value="${Id}" class="btn btn-success">+</button>
        </div>
    </div>
</script>


