@{
    var userName = User.FindFirst(System.Security.Claims.ClaimTypes.Name).Value;
    var lawyerId = User.FindFirst(PalClaimType.LawyerId.ToString()).Value;
    var userType = User.FindFirst(PalClaimType.UserType.ToString()).Value;
}


<!-- Main Sidebar Container -->
<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a onclick="testNotification()" class="brand-link">
        <img src="~/favcon.jpg" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
        <span class="brand-text font-weight-light">@T("cp.views.sideBar.title")</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar user panel (optional) -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <img src="~/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
            </div>
            <div class="info">
                <a href="#" class="d-block">@userName (@userType)</a>
            </div>
        </div>

        <!-- SidebarSearch Form -->
        <div class="form-inline">
            <div class="input-group" data-widget="sidebar-search">
                <input class="form-control form-control-sidebar" type="search" placeholder="Search" aria-label="Search">
                <div class="input-group-append">
                    <button class="btn btn-sidebar">
                        <i class="fas fa-search fa-fw"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <li class="nav-item menu-open">
                    <a href="#" class="nav-link" style="background-color: #17a2b8">
                        <i class="nav-icon fas fas fa-home"></i>
                        <p>@T("cp.views.sideBar.realestates.title")<i class="right fas fa-angle-left"></i></p>
                    </a>
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a asp-action="ProjectsList" asp-controller="Lawyers" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>@T("cp.views.sideBar.projects.title")</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="RealEstatesList" asp-controller="Lawyers" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>@T("cp.views.sideBar.realestates.title")</p>
                            </a>
                        </li>

                    </ul>
                </li>



                <li class="nav-item menu-open">
                    <a href="#" class="nav-link" style="background-color: #17a2b8">
                        <i class="nav-icon fab fa-rocketchat"></i>
                        <p>@T("cp.views.sideBar.chat.title")<i class="right fas fa-angle-left"></i></p>
                    </a>
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a href="/Admin/Chat/LawyerInbox?chatType=4&LawyerId=@lawyerId" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>@T("cp.views.sideBar.chat.customers")</p>
                            </a>
                        </li>

                    </ul>
                </li>


                <li class="nav-item menu-open">
                    <a href="#" class="nav-link" style="background-color: #17a2b8">
                        <i class="nav-icon fas fa-info-circle"></i>
                        <p>My Information<i class="right fas fa-angle-left"></i></p>
                    </a>
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a asp-action="LawyerProfile" asp-controller="Lawyers" asp-route-id="@lawyerId" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Profile</p>
                            </a>
                        </li>

                    </ul>
                </li>

            </ul>
        </nav>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>
