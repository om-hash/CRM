                        {
                            <div class="form-group col-lg-6 col-md-12" style="margin-top:10px">
                                <a href="@Model.MainImgUrl" class="btn btn-success">@T("btn.download")</a>
                            </div>
                        }
                    </div>
                    <div class="form-group col-lg-6 col-md-12">
