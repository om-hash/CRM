                                            {
                                                <a class="nav-item nav-link" id="nav-@tabName" data-toggle="tab" href="#contentDiv-@i" role="tab" aria-controls="#contentDiv-@i">@languages[i].Name</a>
                                            }
                                        }
                                    }

                                </div>
                            </nav>
