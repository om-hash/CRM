                        <span class="text-danger">@webWorkContext.IsFieldRequired("Company", "Email")</span>
                        <input asp-for="Email" type="email" class="form-control form-control-sm rounded-0"  />
                        <span asp-validation-for="Email" class="text-danger"></span>
