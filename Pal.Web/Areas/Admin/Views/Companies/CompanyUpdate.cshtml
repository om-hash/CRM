                                                    var contentEditor = new Pal.Web.Models.HtmlEditorModel()
                                                    {
                                                        Value = Model.CompanyTranslates[i].Content,
                                                        Id = "CompanyContent-" + i,
                                                        ImgPath = "",
                                                        ImgSaveUrl = "",
                                                    };
                                                    await Html.RenderPartialAsync("_HtmlEditor", contentEditor);
                                                }
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                        </div>

                    </div>
