@using Pal.Data.VMs.Blogs;
@model BlogsCardVM

<section class="subheader" style=" background: #787c8a url(/images/Blogs-----main-photo-B.jpg) no-repeat center;">
    <div class="container">
        <h1>@T("publicInterface.blog.title")</h1>
        <div class="breadcrumb right">@T("global.home") <i class="fa fa-angle-right"></i> <a href="#">@T("publicInterface.blog.title")</a></div>
        <div class="clear"></div>
    </div>
</section>
<style>
    .blog-post-content h3 a:hover {
        color: #e8792f;
    }
   
</style>

<section class="module">
    <div class="container">

        <div class="row">
            <div class="col-lg-12 col-md-12">

                <div class="blog-post">
                    <a class="blog-post-img">
                        <div class="img-fade"></div>
                        <div class="blog-post-date"><span>@Model.PostData.Day</span>@Model.PostData.Month</div>
                        <img src="@Model.MainImage" alt="" />
                    </a>
                    <div class="content blog-post-content">
                        <h3><a>@Model.Title</a></h3>
                        <ul class="blog-post-details">
                            <a>@T("publicInterface.blog.tags"):</a> @Model.Tags.Replace(",", " - ")
                        </ul>
                        <p>@Html.Raw(Model.Content)</p>

                        <div class="blog-post-share">
                            <div class="divider"></div>
                            <span class="left"><strong>   @T("publicInterface.blog.share"):  </strong> </span>
                            <ul class="social-icons circle">
                                <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                                <li><a href="#"><i class="fa fa-instagram"></i></a></li>
                                <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                                <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                                <li><a href="#"><i class="fa fa-youtube"></i></a></li>
                                <li><a href="#"><i class="fa fa-linkedin"></i></a></li>
                            </ul>
                        </div>

                    </div>
                </div><!-- end blog post -->



                <div class="widget comment-form">
                    <h4><span>@T("publicInterface.blog.comment.title")</span> <img src="images/divider-half.png" alt="" /></h4>
                    <form>
                        <div class="form-block">
                            <label>@T("publicInterface.blog.name")</label>
                            <input type="text" placeholder="" name="name" />
                        </div>
                        <div class="form-block">
                            <label>@T("publicInterface.blog.email")</label>
                            <input type="text" placeholder="" name="email" />
                        </div>
                        <div class="form-block">
                            <label>@T("publicInterface.blog.massage")</label>
                            <textarea placeholder="@T("publicInterface.blog.massage")" name="message"></textarea>
                        </div>
                        <div class="form-block">
                            <input type="submit" value="Submit" />
                        </div>
                    </form>
                </div>

            </div><!-- end blog posts -->


        </div>

    </div>
</section>

<section class="module cta newsletter">
    <partial name="Partials/_NewsPaperRegister" />
</section>
