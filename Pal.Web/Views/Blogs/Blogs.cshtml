@using Pal.Data.VMs.Blogs;
@model List<BlogsCardVM>;

    <style>
        .blog-post-content h3 a:hover {
            color: #e8792f;
        }
   
    </style>
<section class="subheader"style=" background: #787c8a url(/images/Blogs-----main-photo-B.jpg) no-repeat center;">
    <div class="container">
        <h1>@T("publicInterface.blog.title")</h1>
        <div class="breadcrumb right">@T("global.home") <i class="fa fa-angle-right"></i> <a href="#" class="current">@T("publicInterface.blog.title")</a></div>
        <div class="clear"></div>
    </div>
</section>

<section class="module">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">

                @foreach (var blog in Model)
                {
                    <div class="blog-post shadow-hover">
                        <a href="#" class="blog-post-img">
                            <div class="img-fade"></div>
                            <div class="blog-post-date"><span>@blog.PostData.Day</span>@blog.PostData.Month</div>
                            <img src="@blog.MainImage" alt="" />
                        </a>
                        <div class="content blog-post-content">
                            <h3><a href="#">@blog.Title</a></h3>
                            <ul class="blog-post-details">
                                <a>@T("publicInterface.blog.tags"):</a> @blog.Tags.Replace(",", " - ")
                            </ul>
                            <p>@blog.SubTitle</p>
                            <a href="/Blogs/blog/@blog.Id" class="button button-icon small alt"><i class="fa fa-angle-right"></i>@T("global.more")</a>
                        </div>
                    </div>
                }
            </div><!-- end blog posts -->
        </div><!-- end row -->

    </div><!-- end container -->
</section>


<section class="module cta newsletter">
    <partial name="Partials/_NewsPaperRegister" />
</section>